{
  "manifest_version": 3,
  "name": "Gmail AI Reply Assistant",
  "description": "Generate Gmail reply drafts with customizable prompts and an API key stored in the extension.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_title": "AI Reply Assistant",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
